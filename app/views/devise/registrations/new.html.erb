<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Supporters Account</h1>
          <p>Sign up for the supporters account for $15/month and get full access to the community!</p>
        <% else %>
          <h1>Fan Account</h1>
          <p>Sing up for free and get basic access to the community.</p>
        <% end %>
      </div>
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "supporter_form" %>
        <% else %>
          <%= render "fan_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
